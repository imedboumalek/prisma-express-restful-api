generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model author {
  id                      Int           @id
  username                String?       @unique @db.VarChar(50)
  first_name              String?       @db.VarChar(50)
  last_name               String?       @db.VarChar(50)
  email                   String?       @unique @db.VarChar(320)
  country                 Int?
  org                     Int?
  country_authorTocountry country?      @relation(fields: [country], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "FK_author.country")
  organization            organization? @relation(fields: [org], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "FK_author.org")
}

model conference {
  id                          Int       @id
  name                        String?   @db.VarChar(128)
  date                        DateTime? @db.Timestamp(6)
  sub_limit_date              DateTime? @db.Timestamp(6)
  country                     Int?
  topics                      Int[]
  country_conferenceTocountry country?  @relation(fields: [country], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "FK_conference.country")
}

model country {
  id         Int          @id
  name       String?      @db.VarChar(128)
  author     author[]
  conference conference[]
}

model organization {
  id     Int      @id
  name   String?  @db.VarChar(128)
  author author[]
}

model submission {
  id              Int       @id
  submission_date DateTime? @db.Timestamp(6)
  authors         Int[]
  title           String?   @db.VarChar(256)
  resume          String?
  url             String?   @db.VarChar(512)
  tags            Int[]
  conferences     Int[]
}

model tag {
  id    Int     @id
  title String? @db.VarChar(50)
}

model topic {
  id   Int     @id
  name String? @db.VarChar(128)
}
