generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model author {
  id           Int           @id @default(autoincrement())
  email        String        @unique @db.VarChar(320)
  password     String        @db.VarChar(60)
  username     String        @unique @db.VarChar(50)
  first_name   String        @default("") @db.VarChar(50)
  last_name    String        @default("") @db.VarChar(50)
  country      Int?
  org          Int?
  organization organization? @relation(fields: [org], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "FK_author.org")
}

model conference {
  id             Int       @id @default(autoincrement())
  name           String    @db.VarChar(128)
  date           DateTime? @db.Timestamp(6)
  sub_limit_date DateTime? @db.Timestamp(6)

}

model country {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(128)
}

model organization {
  id     Int      @id @default(autoincrement())
  name   String   @db.VarChar(128)
  author author[]
}

model submission {
  id              Int      @id @default(autoincrement())
  submission_date DateTime @default(now()) @db.Timestamp(6)
  authors         Int[]
  title           String?  @db.VarChar(256)
  resume          String?
  url             String?  @db.VarChar(512)
  tags            Int[]
  conferences     Int[]
}

model tag {
  id    Int    @id @default(autoincrement())
  title String @default("") @db.VarChar(50)
}

model topic {
  id   Int    @id @default(autoincrement())
  name String @default("") @db.VarChar(128)
}
